{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "prod",
			"program": "${workspaceFolder}/bin/nodejs/server.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"sourceMaps": true,
			"internalConsoleOptions": "openOnSessionStart",
			"preLaunchTask": "haxe: build-nodejs.hxml"
		},
		{
			"name": "dev",
			"program": "${workspaceFolder}/bin/nodejs/server-dev.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"sourceMaps": true,
			"internalConsoleOptions": "openOnSessionStart",
			"preLaunchTask": "haxe: build-nodejs-dev.hxml"
		}
	]
}